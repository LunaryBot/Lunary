{
    "compilerOptions": {
        "target": "ES2020", 
        "module": "CommonJS",
        "lib": [
            "ES6",
            "ESNext",
            "ESNext.BigInt"
        ],
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": true,
        "strict": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
        },
    },
    "exclude": [
        "build",
        "node_modules",
        "package-lock.json",
        "package.json"
    ]
}