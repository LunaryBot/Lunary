{
    "compilerOptions": {
        "target": "ES2019", 
        "module": "CommonJS",
        "lib": ["ES6"],
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": true,
        "strict": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
    },
    "exclude": [
        "build",
        "node_modules",
        "package-lock.json",
        "package.json"
    ]
}